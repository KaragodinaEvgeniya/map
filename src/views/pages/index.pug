extends ../main.layout.pug

block content
    .map(id='map')
    .logo
        +image('../images/img/logo.png','','logo__elem')
    .balloon(id='balloon')
        .balloon__header
            .balloon__point
                +image('../images/img/point-white.png','','balloon__elem')
            .balloon__address(id='address')
            .balloon__close(id='close')
                +image('../images/img/close.png','','close__elem')
        .balloon__feedback
            span.balloon__text(id='text') Отзывов пока нет
            ul.balloon__list(id='balloon-list')
        .balloon__form
            h1.balloon__title ВАШ ОТЗЫВ
            form.balloon-form
                ul.balloon-form__list
                    li.balloon-form__item
                        label.balloon-form__name(for='')
                            input.balloon-form__elem(type="text" placeholder="Ваше имя" name="name" required)
                    li.balloon-form__item
                        label.balloon-form__place(for='')
                            input.balloon-form__elem(type="text" placeholder="Укажите место" name="place" required)
                    li.balloon-form__item
                        label.balloon-form__textarea(for='')
                            textarea.balloon-form__elem(type="text" name="comment" required="" placeholder="Поделитесь впечатдениями")
                button.balloon-form__btn(id='btn') Добавить






block scripts
    script(src="welcome.bundle.js")
                                                


            
                    

    
